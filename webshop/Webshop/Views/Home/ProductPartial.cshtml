@model Webshop.Models.Product
    <div class="grid_1_of_4 images_1_of_4">
        <a href="preview.html">
            <img src="@Url.Content("~/Content/images/kattenbak.jpg")" alt="Artikel" title="Artikel" />
            <h2>
                @Model.ProductName
            </h2>
            <div class="price-details">
                <div class="price-number">
                    <p>
                        <span class="rupees">€@Model.Price</span>
                    </p>
                </div>
                <div class="add-cart">
                    <h4>
                        <a href="preview.html">Voeg aan winkelwagen toe.</a>
                    </h4>
                </div>
                <div class="clear">
                </div>
            </div>
    </div>
  
