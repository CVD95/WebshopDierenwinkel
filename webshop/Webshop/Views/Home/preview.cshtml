@model Webshop.Models.Product

<div class="main">
    <div class="content">
        <div class="content_top">
            <div class="back-links">
                <p><a href="index.html">Home</a> >>>> <a href="#">Homepagina MijnDierenWinkel</a></p>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            <div class="cont-desc span_1_of_2">
                <div class="product-details">
                    <div class="grid images_3_of_2">
                        <div id="container">
                            <div id="products_example">
                                <div id="products">
                                    <div class="slides_container">
                                        <a href="@Url.Content("~/Home/index")"><img src="@Url.Content("~/Content/images/rodetas.jpg")" alt="De Easy Hondenkooi" /></a>
                                        <a href="@Url.Content("~/Home/index")"><img src="@Url.Content("~/Content/images/buitenhok.jpg")" alt="De Easy Hondenkooi" /></a>
                                        <a href="@Url.Content("~/Home/index")"><img src="@Url.Content("~/Content/images/kattenbak.jpg")" alt="De Easy Hondenkooi" /></a>
                                        <a href="@Url.Content("~/Home/index")"><img src="@Url.Content("~/Content/images/kattenspeelgoed.jpg")" alt="De Easy Hondenkooi" /></a>
                                        <a href="@Url.Content("~/Home/index")"><img src="@Url.Content("~/Content/images/knipper.jpg")" alt="De Easy Hondenkooi" /></a>
                                    </div>
                                    <ul class="pagination">
                                        <li><a href="@Url.Content("~/Home/index")"><img src="@Url.Content("~/Content/images/kussen.jpg")" alt="De kussen shampoo" /></a></li>
                                        <li><a href="@Url.Content("~/Home/index")"><img src="@Url.Content("~/Content/images/shampoo.jpg")" alt="De Easy Hondenkooi" /></a></li>
                                        <li><a href="@Url.Content("~/Home/index")"><img src="@Url.Content("~/Content/images/trein.jpg")" alt="Houten trein" /></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="desc span_3_of_2">
                        <h2>@Model.ProductName</h2>
                        <p>@Model.ProductDescription</p>
                        <div class="price">
                            <p>Price: <span>€@(Model.Price.ToString("#.##"))</span></p>
                        </div>
                        <div class="available">
                            <p>Voorraad: @Model.Stock</p>
                        </div>
                        <div class="share-desc">
                            <div class="button"><span>@Html.ActionLink("Voeg aan winkelwagen toe", "AddProductToShoppingbag", new { productId = Model.Id })</span></div>         
                            <div class="clear"></div>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
                <script type="text/javascript">
                    $(document).ready(function () {
                        $('#horizontalTab').easyResponsiveTabs({
                            type: 'default', //Types: default, vertical, accordion
                            width: 'auto', //auto or any width like 600px
                            fit: true   // 100% fit in a container
                        });
                    });
                </script>
                <div class="content_bottom">
                    <div class="heading">
