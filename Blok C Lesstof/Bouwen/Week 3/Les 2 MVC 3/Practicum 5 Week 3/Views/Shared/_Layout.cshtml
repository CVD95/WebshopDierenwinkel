<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/TableStyles.css")" rel="stylesheet" type="text/css" />
    
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="container">
        <div id="header">
            <h2>Inschrijven LAN party</h2>
        </div>
        <div id="maincontainer">
            <div id="menu">
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Genres", "Index", "Genre")</li>
                    <li>@Html.ActionLink("Games", "Index", "Game")</li>
                    <li>@Html.ActionLink("Evenementen", "Index", "Evenement")</li>
                    <li>@Html.ActionLink("Registreren student", "Index", "Student")</li>
                    <li>@Html.ActionLink("Inschrijven voor evenement", "Index", "Inschrijven")</li>
                </ul>
            </div>
            <div id="body">
                
                @if (ViewBag.FoutMelding != null)
                {
                    <span style="color:Red">@ViewBag.FoutMelding</span>
                }
                @RenderBody()
            </div>
        </div>

        <div id="footer">
            <h2>contact: lanparty@hhs.nl</h2>
        </div>
    </div>
</body>
</html>
